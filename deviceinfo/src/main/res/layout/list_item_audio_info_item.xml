<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="viewModel"
            type="com.lelloman.deviceinfo.ui.viewmodel.AudioInfoItemListItemViewModel" />
    </data>

    <com.lelloman.common.widget.outsidescrollnotifier.OutsideScrollCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp">

        <TextView
            android:id="@+id/text_view_audio_mode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:text="@{viewModel.mode}"
            tools:text="AAAAAAAAAAAAAAAAAA" />

    </com.lelloman.common.widget.outsidescrollnotifier.OutsideScrollCardView>

</layout>