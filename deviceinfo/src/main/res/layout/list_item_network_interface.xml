<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="viewModel"
            type="com.lelloman.deviceinfo.ui.viewmodel.NetworkInterfaceListItemViewModel" />
    </data>

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp">

        <TextView
            android:id="@+id/text_view_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="8dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:text="@{viewModel.name}"
            android:textStyle="bold"
            tools:text="meeeeeow" />

        <android.support.constraint.Guideline
            android:id="@+id/vertical_guideline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintGuide_percent="0.3"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/text_view_mac_label"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:text="@string/mac_address"
            app:layout_constraintEnd_toStartOf="@+id/vertical_guideline"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/text_view_name"
            tools:text="MAC:" />

        <TextView
            android:id="@+id/text_view_addresses_label"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:text="@string/net_address"
            app:layout_constraintEnd_toStartOf="@+id/vertical_guideline"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/text_view_mac_value"
            tools:text="Addresses:" />

        <TextView
            android:id="@+id/text_view_mac_value"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@{viewModel.hwAddress}"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/text_view_mac_label"
            app:layout_constraintTop_toTopOf="@+id/text_view_mac_label"
            tools:text="MACMACMAC\nmacmacmac" />

        <TextView
            android:id="@+id/text_view_addresses_value"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@{viewModel.netAddresses}"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/text_view_addresses_label"
            app:layout_constraintTop_toTopOf="@+id/text_view_addresses_label"
            tools:text="ASDASD\nASDASD\nASDASD" />

    </android.support.constraint.ConstraintLayout>
</layout>