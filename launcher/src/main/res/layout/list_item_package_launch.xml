<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="viewModel"
            type="com.lelloman.launcher.ui.launches.viewmodel.PackageLaunchListItemViewModel" />
    </data>

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/image_view_icon"
            android:layout_width="64dp"
            android:layout_height="64dp"
            tools:src="@mipmap/ic_launcher"
            android:padding="8dp"
            android:src="@{viewModel.icon}"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/text_view_package_name"
            tools:ignore="ContentDescription" />

        <TextView
            android:id="@+id/text_view_package_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:lines="1"
            android:ellipsize="end"
            android:text="@{viewModel.packageName}"
            tools:text="com.staceppa.alforno.impanata.e.fritta/com.staceppa.alforno.impanata.e.fritta"
            app:layout_constraintStart_toEndOf="@+id/image_view_icon"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/text_view_date_time"
            app:layout_constraintEnd_toEndOf="parent"
            android:gravity="center"

            />

        <TextView
            android:id="@+id/text_view_date_time"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@{viewModel.dateTime}"
            app:layout_constraintStart_toEndOf="@+id/image_view_icon"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/text_view_package_name"
            app:layout_constraintBottom_toBottomOf="parent"
            tools:text="99/99/9999 - 99asd ago"
            android:gravity="center"/>

    </android.support.constraint.ConstraintLayout>
</layout>