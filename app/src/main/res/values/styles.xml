<resources>

    <style name="SettingsItemContainer">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">16dp</item>
    </style>

    <style name="WalkthroughButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:backgroundTint">?android:attr/colorAccent</item>
        <item name="android:textColor">@android:color/primary_text_dark</item>
    </style>

    <style name="WalkthroughInfoTextView">
        <item name="android:textAppearance">@android:style/TextAppearance.DeviceDefault.Medium
        </item>
        <item name="android:textColor">@android:color/primary_text_dark</item>
    </style>

</resources>
