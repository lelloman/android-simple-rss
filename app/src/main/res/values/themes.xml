<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar"/>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="CustomTheme.Light" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="CustomTheme.Darcula" parent="Theme.AppCompat.NoActionBar"/>

    <style name="CustomTheme.Mockito" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">#8BC34A</item>
        <item name="colorPrimaryDark">#689F38</item>
        <item name="android:colorActivatedHighlight">#DCEDC8</item>
        <item name="colorAccent">#FFEB3B</item>
        <item name="android:textColorPrimary">#212121</item>
        <item name="android:textColorSecondary">#757575</item>
        <item name="android:divider">#BDBDBD</item>
    </style>

    <style name="CustomTheme.Black" parent="Theme.AppCompat.NoActionBar">
        <item name="colorPrimary">@android:color/black</item>
        <item name="colorPrimaryDark">@android:color/black</item>
        <item name="colorAccent">#77aaff</item>
        <item name="android:windowBackground">@android:color/black</item>
    </style>

    <color name="darkBgForest">#4b2c20</color>
    <style name="CustomTheme.Forest" parent="Theme.AppCompat.NoActionBar">
        <item name="colorPrimary">#33691e</item>
        <item name="colorControlHighlight">#629749</item>
        <item name="colorPrimaryDark">#003d00</item>
        <item name="colorAccent">#795548</item>
        <item name="android:windowBackground">@color/darkBgForest</item>
    </style>

    <style name="InverseTheme">
        <item name="android:windowBackground">?android:attr/colorPrimary</item>
    </style>

</resources>