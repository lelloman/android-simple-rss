<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="viewModel"
            type="com.lelloman.read.ui.sources.viewmodel.SourcesListViewModel" />
    </data>

    <!--suppress AndroidElementNotAllowed -->
    <merge xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        tools:parentTag="FrameLayout"
        tools:context=".ui.sources.view.SourcesListActivity">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/sources_recycler_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingBottom="36dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/fab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:src="@drawable/ic_add_white_24dp"
            android:onClick="@{viewModel::onFabClicked}"
            app:fabSize="normal"
            app:layout_behavior="com.lelloman.read.utils.FabBehavior"
            android:layout_gravity="bottom|end"/>

    </merge>
</layout>